root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.md]
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,xml}]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{js,ts}]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{css,scss,sass}]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2
end_of_line = lf
insert_final_newline = true

[*.sh]
end_of_line = lf
